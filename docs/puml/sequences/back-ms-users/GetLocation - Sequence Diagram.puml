@startuml Get Location
!theme plain
title Get Location - Hexagonal Architecture Flow

actor Client
participant "LocationController\n(Input Adapter)" as Controller
participant "LocationUseCase\n(Domain Port)" as UseCase
participant "LocationMapper\n(Application Layer)" as Mapper
participant "LocationRepositoryPort\n(Domain Port)" as RepoPort
participant "LocationRepositoryAdapter\n(Output Adapter)" as RepoAdapter
participant "JpaLocationRepository\n(Infrastructure)" as JpaRepo
database "Database" as DB

Client -> Controller: GET /locations/{locationId}
activate Controller

Controller -> UseCase: get(locationId)
activate UseCase
note right: UseCase is implemented by LocationService

UseCase -> RepoPort: findById(locationId)
activate RepoPort
RepoPort -> RepoAdapter: findById(locationId)
activate RepoAdapter
RepoAdapter -> JpaRepo: findById(locationId)
activate JpaRepo
JpaRepo -> DB: SELECT * FROM locations WHERE id = ?
DB --> JpaRepo: Optional<LocationDbo>
JpaRepo --> RepoAdapter: Optional<LocationDbo>
deactivate JpaRepo

alt Location Found
    RepoAdapter -> Mapper: toDomain(LocationDbo)
    activate Mapper
    Mapper --> RepoAdapter: Location
    deactivate Mapper
    
    RepoAdapter --> RepoPort: Optional<Location>
    deactivate RepoAdapter
    RepoPort --> UseCase: Optional<Location>
    deactivate RepoPort
    
    UseCase -> Mapper: toGetResponse(Location)
    activate Mapper
    Mapper --> UseCase: GetLocationResponseContent
    deactivate Mapper
    
    UseCase --> Controller: GetLocationResponseContent
    deactivate UseCase
    
    Controller --> Client: HTTP 200
    deactivate Controller

else Location Not Found
    RepoAdapter --> RepoPort: Optional.empty()
    deactivate RepoAdapter
    RepoPort --> UseCase: Optional.empty()
    deactivate RepoPort
    
    UseCase --> Controller: NotFoundException("Location not found")
    deactivate UseCase
    
    Controller --> Client: HTTP 404
    deactivate Controller
end

@enduml