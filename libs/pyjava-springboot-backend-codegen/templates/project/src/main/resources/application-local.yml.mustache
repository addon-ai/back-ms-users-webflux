spring:
  datasource:
    url: jdbc:{{database.sgbd}}://localhost:{{database.port}}/{{database.name}}
    username: {{database.user}}
    password: {{database.password}}
    driver-class-name: org.postgresql.Driver
  jpa:
    database-platform: org.hibernate.dialect.PostgreSQLDialect
    hibernate:
      ddl-auto: validate
    show-sql: true
    properties:
      hibernate:
        format_sql: true
  flyway:
    url: jdbc:{{database.sgbd}}://localhost:{{database.port}}/{{database.name}}
    user: {{database.user}}
    password: {{database.password}}
    locations: classpath:db/migration
    baseline-on-migrate: true
    validate-on-migrate: true
    enabled: true
    create-schemas: true

server:
  port: {{infra.http.ports.int}}

logging:
  level:
    root: DEBUG
    org.springframework.security: DEBUG

springdoc:
  api-docs:
    path: /v3/api-docs
  swagger-ui:
    path: /swagger-ui.html
    operations-sorter: method
    try-it-out-enabled: true

management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics
  endpoint:
    health:
      show-details: always