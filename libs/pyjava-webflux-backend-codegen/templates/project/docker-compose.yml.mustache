# Docker Compose for Local Development Only
# This file is designed for local development with hardcoded values
# For other environments, use Kubernetes, Docker Swarm, or cloud services

version: '3.8'

services:
  # {{database.sgbd}} Database for Local Development
  {{database.sgbd}}:
    image: {{database.dockerImage}}
    container_name: {{project.general.name}}-{{database.sgbd}}-local
    restart: unless-stopped
    environment:
      {{#database.postgresql}}POSTGRES_DB: {{project.general.name_underscore}}_db
      POSTGRES_USER: {{database.username}}
      POSTGRES_PASSWORD: {{database.password}}
      POSTGRES_INITDB_ARGS: "--encoding=UTF-8 --lc-collate=C --lc-ctype=C"{{/database.postgresql}}{{#database.mysql}}MYSQL_DATABASE: {{project.general.name_underscore}}_db
      MYSQL_USER: {{database.username}}
      MYSQL_PASSWORD: {{database.password}}
      MYSQL_ROOT_PASSWORD: {{database.password}}{{/database.mysql}}{{#database.oracle}}ORACLE_SID: {{project.general.name_underscore}}_db
      ORACLE_PWD: {{database.password}}
      ORACLE_CHARACTERSET: AL32UTF8{{/database.oracle}}{{#database.sqlserver}}ACCEPT_EULA: Y
      SA_PASSWORD: {{database.password}}
      MSSQL_DB: {{project.general.name_underscore}}_db{{/database.sqlserver}}
    ports:
      - "{{database.port}}:{{database.port}}"
    volumes:
      - {{database.sgbd}}_data:/var/lib/{{database.sgbd}}/data
    networks:
      - {{project.general.name_underscore}}_network
    healthcheck:
      test: {{#database.postgresql}}["CMD-SHELL", "pg_isready -U {{database.username}} -d {{project.general.name_underscore}}_db"]{{/database.postgresql}}{{#database.mysql}}["CMD", "mysqladmin", "ping", "-h", "localhost"]{{/database.mysql}}{{#database.oracle}}["CMD-SHELL", "echo 'SELECT 1 FROM DUAL;' | sqlplus -s {{database.username}}/{{database.password}}@localhost:1521/{{project.general.name_underscore}}_db"]{{/database.oracle}}{{#database.sqlserver}}["CMD-SHELL", "/opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P {{database.password}} -Q 'SELECT 1'"]{{/database.sqlserver}}
      interval: 10s
      timeout: 5s
      retries: 5

  # Application Service (Local Profile)
  {{project.general.name}}-app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{project.general.name}}-app-local
    restart: unless-stopped
    environment:
      # Force local profile for Docker Compose
      SPRING_PROFILES_ACTIVE: local
      
      # Database connection variables
      DB_URL: r2dbc:{{database.sgbd}}://{{database.sgbd}}:{{database.port}}/{{project.general.name_underscore}}_db
      FLYWAY_URL: jdbc:{{database.sgbd}}://{{database.sgbd}}:{{database.port}}/{{project.general.name_underscore}}_db
      DB_USERNAME: {{database.username}}
      DB_PASSWORD: {{database.password}}

      # Reduced logging level from DEBUG to INFO
      LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_JDBC: INFO
      LOGGING_LEVEL_ORG_FLYWAYDB: INFO

      # JVM settings for development
      JAVA_OPTS: "-Xmx512m -Xms256m -XX:+UseG1GC"
    ports:
      - "{{server.port}}:{{server.port}}"
    depends_on:
      {{database.sgbd}}:
        condition: service_healthy
    networks:
      - {{project.general.name_underscore}}_network
    volumes:
      # Mount logs for debugging
      - ./logs:/app/logs
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{server.port}}/actuator/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

  # Database Management Tool (Optional)
  {{#database.postgresql}}pgadmin:
    image: dpage/pgadmin4:latest
    container_name: {{project.general.name}}-pgadmin-local
    restart: unless-stopped
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@{{project.general.name}}.local
      PGADMIN_DEFAULT_PASSWORD: admin123
      PGADMIN_CONFIG_SERVER_MODE: 'False'
    ports:
      - "5050:80"
    depends_on:
      - {{database.sgbd}}
    networks:
      - {{project.general.name_underscore}}_network
    profiles:
      - tools{{/database.postgresql}}{{#database.mysql}}phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    container_name: {{project.general.name}}-phpmyadmin-local
    restart: unless-stopped
    environment:
      PMA_HOST: {{database.sgbd}}
      PMA_USER: {{database.username}}
      PMA_PASSWORD: {{database.password}}
    ports:
      - "5050:80"
    depends_on:
      - {{database.sgbd}}
    networks:
      - {{project.general.name_underscore}}_network
    profiles:
      - tools{{/database.mysql}}

volumes:
  {{database.sgbd}}_data:
    driver: local

networks:
  {{project.general.name_underscore}}_network:
    driver: bridge
    name: {{project.general.name_underscore}}_local_network